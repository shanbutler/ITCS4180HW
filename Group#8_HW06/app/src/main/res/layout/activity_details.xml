<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shan.group8_hw05.DetailsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDetail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="100dp"
        android:minWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tempDetail"
        android:layout_below="@+id/imageDetail"
        android:layout_centerHorizontal="true"
        android:textSize="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/conditionDetail"
        android:layout_below="@+id/tempDetail"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/maxTempDetail"
        android:textSize="20dp"
        android:layout_below="@+id/conditionDetail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/minTempDetail"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/maxTempDetail"
        android:layout_alignLeft="@+id/maxTempDetail"
        android:layout_alignStart="@+id/maxTempDetail" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_above="@+id/feelsDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dewDetail"
        android:paddingBottom="5dp"
        android:layout_above="@+id/pressDetail"
        android:layout_alignLeft="@+id/maxTempDetail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/pressDetail"
        android:paddingBottom="5dp"
        android:layout_above="@+id/cloudsDetail"
        android:layout_alignLeft="@+id/maxTempDetail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/feelsDetail"
        android:paddingBottom="5dp"
        android:layout_above="@+id/humidDetail"
        android:layout_alignLeft="@+id/maxTempDetail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/windDetail"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cloudsDetail"
        android:layout_alignStart="@+id/cloudsDetail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/cloudsDetail"
        android:paddingBottom="5dp"
        android:layout_above="@+id/windDetail"
        android:layout_alignLeft="@+id/maxTempDetail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/humidDetail"
        android:paddingBottom="5dp"
        android:layout_above="@+id/dewDetail"
        android:layout_alignLeft="@+id/maxTempDetail" />

</RelativeLayout>
